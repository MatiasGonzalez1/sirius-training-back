// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id_artist    Int     @default(autoincrement()) @id
  name  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  post Publish[]
}

model Publish {
  id_publish        Int     @default(autoincrement()) @id
  artist_id  Int
  publish_artist   Artist?   @relation(fields: [artist_id], references: [id_artist])
  type_publish Int
  name     String
  date   DateTime
  theme Theme[]
}

model Type{
  id_type Int @id
  name String
  // publish_type Int @id @relation(fields: [id_type], references: [type_publish])
}

model Theme{
  id Int @default(autoincrement()) @id
  publish_id Int
  theme_publish Publish? @relation(fields: [publish_id], references: [id_publish])
  index Int
  duration BigInt
}